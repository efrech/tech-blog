<div class="row mb-4">
    <div class="col-md-5">
        <h2>
            <a href="/posts/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>{{post.user.username}} {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{#each post.comments as |comment| }}
<div class="row mb-4">
    <div class="col-md-7">
        <p>
            {{comment.content}}
        </p>
    </div>
    <div class="col-md-5">
        <p>{{comment.user.username}} {{format_date comment.date_created}}</p>
    </div>
</div>
{{/each}}

<div class="row">
    <div class="col-md-12">
        <form class="form new-comment-form">
            <input type="hidden" name="post-id" value="{{post.id}}">
            <div class="form-group">
                <label for="comment">Comment</label>
                <textarea class="form-input" name="comment-content"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="/javascript/comment.js"></script>